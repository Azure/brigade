{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "github.com/brigadecore/brigade/v2/source-state.schema.json",

	"definitions": {

		"kind": {
			"type": "string",
			"description": "The type of object represented by the document",
			"enum": ["SourceState"]
		},

		"stateMap": {
			"type": "object",
			"additionalProperties": true,
			"patternProperties": {
				"^[a-z][a-z\\d-]*[a-z\\d]$": {
					"type": "string"
				}
			},
			"description": "A map of source-specific (e.g. gateway-specific) state"
		}

	},

	"title": "SourceState",
	"type": "object",
	"required": ["apiVersion", "kind"],
	"additionalProperties": false,
	"properties": {
		"apiVersion": {
			"$ref": "file:///brigade/schemas/common.json#/definitions/apiVersion"
		},
		"kind": {
			"$ref": "#/definitions/kind"
		},
		"state": {
			"$ref": "#/definitions/stateMap"
		}
	}
}
