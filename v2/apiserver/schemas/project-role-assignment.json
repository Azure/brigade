{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "project-role-assignment.json",

	"definitions": {

		"kind": {
			"type": "string",
			"description": "The type of object represented by the document",
			"enum": ["RoleAssignment"]
		}

	},

	"title": "ProjectRoleAssignment",
	"type": "object",
	"required": ["apiVersion", "kind", "principal", "role"],
	"additionalProperties": false,
	"properties": {
		"apiVersion": {
			"$ref": "common.json#/definitions/apiVersion"
		},
		"kind": {
			"$ref": "#/definitions/kind"
		},
		"principal": {
			"$ref": "common.json#/definitions/principalReference"
		},
		"role": {
			"type": "object",
			"required": ["type", "name", "scope"],
			"additionalProperties": false,
			"properties": {
				"type": {
					"type": "string",
					"description": "The type of role being assigned-- must be PROJECT",
					"enum": ["PROJECT"]
				},
				"name": {
					"type": "string",
					"description": "A role name",
					"enum": [
						"ADMIN",
						"DEVELOPER",
						"USER"
					]
				},
				"scope": {
					"type": "string",
					"description": "The project this role should be scoped to",
					"pattern": "^[a-z][a-z\\d-]*[a-z\\d]$",
					"minLength": 3,
					"maxLength": 18
				}
			}
		}
	}
}
